<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stock</title>
  <link rel="stylesheet" href="/styles/style_inicio.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
  <%- include('partials/navbar_inicio') %>
    <%- include('partials/sidebar') %>      
  <h1>Gestión de Stock</h1>
  <table border="1">
    <thead>
      <tr>
        <th>ID Stock</th>
        <th>ID Producto</th>
        <th>ID Almacén</th>
        <th>Cantidad</th>
      </tr>
    </thead>
    <tbody>
      <% if (StockData.length > 0) { %>
        <% StockData.forEach(stock_a => { %>
          <tr>
            <td><%= stock_a.id_stock_a %></td>
            <td><%= stock_a.producto_id_b %></td>
            <td><%= stock_a.almacen_id_b %></td>
            <td><%= stock_a.cantidad %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="4">No hay registros de stock.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <%- include('partials/footer') %>
</body>
</html>
