<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Informes</title>
  <link rel="stylesheet" href="/styles/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar_inicio') %>
  <%- include('partials/sidebar') %>

  <div class="container my-4">
    <h1 class="text-center">Gestión de Informes</h1>
    
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID Auditoría</th>
            <th>Tabla Afectada</th>
            <th>Tipo de Operación</th>
            <th>Usuario</th>
            <th>Fecha de Operación</th>
            <th>Detalles</th>
          </tr>
        </thead>
        <tbody>
          <% if (auditoria && auditoria.length > 0) { %>
            <% auditoria.forEach(record => { %>
              <tr>
                <td><%= record.id_auditoria %></td>
                <td><%= record.tabla_afectada %></td>
                <td><%= record.tipo_operacion %></td>
                <td><%= record.usuario %></td>
                <td><%= new Date(record.fecha_operacion).toLocaleDateString("es-ES") %></td>
                <td><%= record.detalles %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center">No hay datos disponibles</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
